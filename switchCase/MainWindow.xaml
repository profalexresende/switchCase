        <Label x:Name="lblCodigo" Content="Digite o código do elogio" HorizontalAlignment="Left" Margin="22,6,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCodigo" HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <Button x:Name="btnVerificar" Content="Verificar" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Width="157" Click="btnVerificar_Click"/>

